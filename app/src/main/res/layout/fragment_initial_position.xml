<?xml version="1.0" encoding="utf-8"?>
<jp.tkgktyk.xposed.niwatori.app.GridLinedFlyingLayout
    android:id="@+id/flying"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flying="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    flying:horizontalPadding="@dimen/flying_view_padding"
    flying:useContainer="true"
    flying:verticalPadding="@dimen/flying_view_padding"
    tools:context=".app.InitialPosition">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:drawable/screen_background_dark_transparent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/usage_of_initial_position"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/initXText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/init_x_d1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/initYText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/init_y_d1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"/>

    </LinearLayout>

</jp.tkgktyk.xposed.niwatori.app.GridLinedFlyingLayout>